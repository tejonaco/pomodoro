{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Pomodoro",
    "version": "1.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "exists": true,
        "createDir": true,
        "scope": ["$APPCONFIG", "$APPCONFIG/*"]
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Pomodoro",
        "width": 360,
        "height": 480,
        "resizable": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tejonaco.pomodoro",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
